<header>
  <a href="/">
  <img src="/images/potloodgum.webp" alt="Potloodgum logo" class="logo">
  </a>
  <a href="" role="button" aria-label="menu" id="menu-button" class="menu-button">
  MENU
  </a>
</header>

{% set navItems = [
  { url: "/", label: "Projects", ariaLabel: "Projects" },
  { url: "/photography", label: "Photography", ariaLabel: "Photography" },
  { url: "/blog", label: "Blog", ariaLabel: "Blog" },
  { url: "/about", label: "About", ariaLabel: "About" },
  { url: "/lectures", label: "Lectures", ariaLabel: "Lectures" }
] %}

<div class="menu-overlay">

  <div class="menu-overlay-inner">
  <button id="close-menu" class="close-menu" role="button" aria-label="Close menu">
    Close menu
  </button>

  <nav>
    <ul>
      {% for item in navItems %}
        <li>

          <a href="{{ item.url }}"
            aria-label="{{ item.ariaLabel }}"
            aria-roledescription="button"

            {% if page.url == item.url %}aria-current="page"{% endif %}
            class="{% if item.url in page.url %}active{% endif %}">
            {{ item.label }}
          </a>
        </li>
      {% endfor %}

    </ul>
  </nav>
</div>
</div>
