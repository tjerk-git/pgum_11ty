<script>
document.getElementById("toggleButton").addEventListener("click", function () {
    const button = this;
    const state = button.getAttribute("data-state");

    document.querySelectorAll(".photo-toggle").forEach(function (figure) {
        const img = figure.querySelector("img");
        const overlay = figure.querySelector(".alt-overlay");

        if (state === "images") {
            // Switch to alt text
            overlay.textContent = img.alt;
            overlay.style.display = "flex";
            img.style.visibility = "hidden";
        } else {
            // Switch back to images
            overlay.style.display = "none";
            img.style.visibility = "visible";
        }
    });

    // Toggle state and button label
    if (state === "images") {
        button.setAttribute("data-state", "alt");
        button.textContent = "Toon foto's";
    } else {
        button.setAttribute("data-state", "images");
        button.textContent = "Toon alt-tekst";
    }
});
</script>
